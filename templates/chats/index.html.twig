{% extends 'base.html.twig' %}

{% block body %}
<br>
<h1>Page d'accueil des chats</h1>

{% if nom %}
    <p>Bonjour {{ nom }} !</p>
{% else %}
    <p>Aucun nom défini.</p>
{% endif %}

<br><br><br><br>

<h2>Liste des chats</h2>
<br>
<ul>
    {% for chat in chats %}
        <li>{{ chat }}</li><br>
    {% endfor %}
</ul>

<br><br><br>

<h2>Rôles</h2>
<br>
<ul>
    {% if roles %}
        {% for role in roles %}
            <li>{{ role }}</li>
        {% endfor %}
    {% else %}
        <li>Aucun rôle défini.</li>
    {% endif %}
</ul>
<br>
{% if 'Admin' in roles %}
    <p>Vous êtes tout-puissant !!!</p>
{% endif %}
<br><br>


{% endblock %}


